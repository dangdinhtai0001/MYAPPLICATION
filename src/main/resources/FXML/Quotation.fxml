<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/10.0.1"
      fx:controller="controller.QuotationController">
    <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Bảng Báo Giá">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </Text>
        <TextField fx:id="txtFilter" promptText="Tìm Kiếm">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </TextField>
        <ScrollPane>
            <content>
                <TableView fx:id="tableQuotation">
                    <columns>
                        <TableColumn fx:id="colNumber" prefWidth="50.0" text="STT"/>
                        <TableColumn fx:id="colName" prefWidth="250.0" text="Tên mặt hàng"/>
                        <TableColumn fx:id="colType" prefWidth="75.0" text="Loại"/>
                        <TableColumn fx:id="colPrice" prefWidth="100.0" text="Giá"/>
                    </columns>
                </TableView>
            </content>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </ScrollPane>
    </children>
</VBox>
